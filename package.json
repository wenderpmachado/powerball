{
  "name": "powerball",
  "version": "0.1.0",
  "description": "A challenge made with typescript and best practices",
  "author": "Wender Machado <wenderpmachado@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/wenderpmachado/powerball.git"
  },
  "engines": {
    "node": "^14"
  },
  "scripts": {
    "start": "node -r dotenv/config dist/index",
    "dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 app/index",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/app"
    ],
    "collectCoverageFrom": [
      "<rootDir>/app/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "transform": {
      ".+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "axios": "^0.23.0",
    "express": "^4.16.4",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.16.0",
    "eslint-plugin-jest": "^22.3.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-unicorn": "^7.1.0",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.2.3",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  }
}
